extends ../layouts/operator

block meta
  meta(name='page', content='contact-detail')

block content
  <section class="text-gray-700 body-font">
    <div class="container px-5 py-5 mx-auto flex flex-col">
      <div class="lg:w-4/6 mx-auto">
        <div class="flex flex-col sm:flex-row mt-10">
          <div class="sm:w-1/3 text-center sm:pr-8 sm:py-8">
            <div class="w-20 h-20 rounded-full inline-flex items-center justify-center bg-gray-200 text-gray-400">
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10" viewBox="0 0 24 24">
                <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
            </div>
            <div class="flex flex-col items-center text-center justify-center">
              <h2 class="font-medium title-font mt-4 text-gray-900 text-lg">#{contact.fullName}</h2>
              <div class="w-12 h-1 bg-indigo-500 rounded mt-2 mb-4"></div>
              <p class="text-base text-gray-600">#{contact.email}</p>
            </div>
          </div>
          <div class="sm:w-2/3 sm:pl-8 sm:py-8 sm:border-l border-gray-300 sm:border-t-0 border-t mt-4 pt-4 sm:mt-0 text-center sm:text-left">
            h2(class="font-medium title-font mt-4 text-gray-900 text-lg") Nuovo appuntamento
            form(action="/appointments", data-remote="true", method="post")
              <div class="p-4 flex flex-col md:ml-auto w-full mt-10 md:mt-0">
                <div class="relative mb-4">
                  <label for="summary" class="leading-7 text-sm text-gray-600">Titolo</label>
                  <input type="text" id="summary" name="summary" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <div class="relative mb-4">
                  <label for="date" class="leading-7 text-sm text-gray-600">Data</label>
                  <input type="datetime-local" id="date" name="date" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <div class="relative mb-4">
                  <label for="room" class="leading-7 text-sm text-gray-600">Stanza</label>
                  select(name="room", data-behavior="room-select" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out")
                      option(value="") -
                </div>
                <div class="relative mb-4">
                  <label for="notes" class="leading-7 text-sm text-gray-600">Note</label>
                  textarea(name="notes", cols="30", rows="10", class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out")
                </div>
                input(type="hidden", name="contact", value=`${contact._id}`)
                input(type="submit", value="Invia", class="text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg")
              </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  section
    div.container.px-5.mx-auto