extends ../layouts/operator

block content
  h1= title

  form(action="/contacts", data-remote="true", method="post")
    input(type="text", name="fullName")
    |
    input(type="text", name="email")
    |
    button(type="submit") Invia
  
  div.contacts
    ul
      each contact in contacts
        li
          a(href=`/contacts/${contact._id}`) #{contact.fullName}
          |
          |
          a(href=`/contacts/${contact._id}`, data-method="delete", data-remote="true") x