mixin form_textarea(field, label, errors = {})
    <div class="relative sm:mr-4 mb-4 sm:mb-0 flex-grow w-full">
        label(for=field class="leading-7 text-sm text-gray-600") #{label}
        textarea(name=field, cols="30", rows="10", class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out")&attributes(attributes)
    </div>